{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Parlamentswahlen Sitzverteilung",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt, zB. 'Die Demokraten sichern sich die Mehrheit'"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt pr채zise, um welche Wahl es sich handelt."
     }
    },
    "totalSeats": {
      "title": "Total verf체gbare Sitze",
      "type": "number"
    },
    "parties": {
      "title": "Parteien",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        }
      },
      "items": {
        "type": "object",
        "title": "Partei",
        "properties": {
          "name": {
            "title": "Parteiname oder K체rzel",
            "type": "string"
          },
          "color": {
            "title": "Parteifarbe",
            "type": "object",
            "Q:options": {
              "compact": true,
              "availabilityChecks": [
                {
                  "type": "UserHasRole",
                  "role": "expert-election-seats"
                }
              ]
            },
            "properties": {
              "colorCode": {
                "title": "Farbcode",
                "type": "string",
                "Q:type": "color"
              },
              "classAttribute": {
                "title": "CSS Klassenname",
                "type": "string",
                "Q:options": {
                  "placeholder": "s-viz-color-party-..."
                }
              }
            }
          },
          "seats": {
            "title": "Anzahl Sitze",
            "type": "number"
          },
          "previous": {
            "title": "Anzahl Sitze vergangene Wahl",
            "type": "number",
            "Q:options": {
              "placeholder": "Die Ver채nderung von der vergangenen zu aktuellen Wahl wird dann automatisch berechnet."
            }
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Link",
                "type": "string",
                "Q:options": {
                  "placeholder": "Direktlink zur Quelle, http://..."
                }
              },
              "isValid": {
                "type": "boolean"
              }    
            }
          }
        },
        "required": ["text"]
      }
    },
    "options": {
      "title": "Optionen",
      "type": "object",
      "Q:options": {
        "availabilityChecks": [
          {
            "type": "UserHasRole",
            "role": "expert-election-seats"
          }
        ]
      },
      "properties": {
        "hideUpdatedDate": {
          "title": "Aktualisierungsdatum ausblenden",
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "required": [
    "title", "totalSeats"
  ]
}
