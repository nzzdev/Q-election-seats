{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Parlamentswahlen Sitzverteilung",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string"
    },
    "totalSeats": {
      "title": "Total verfügbare Sitze",
      "type": "number"
    },
    "parties": {
      "title": "Parteien",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        }
      },
      "items": {
        "type": "object",
        "title": "Partei",
        "properties": {
          "name": {
            "title": "Parteiname (Kürzel)",
            "type": "string"
          },
          "color": {
            "title": "Farbe",
            "type": "object",
            "Q:options": {
              "compact": true,
              "availabilityChecks": [
                {
                  "type": "UserHasRole",
                  "role": "expert-election-seats"
                }
              ]
            },
            "properties": {
              "colorCode": {
                "title": "Farbcode",
                "type": "string",
                "Q:type": "color"
              },
              "classAttribute": {
                "title": "CSS Klassenname",
                "type": "string"
              }
            }
          },
          "seats": {
            "title": "Anzahl Sitze",
            "type": "number"
          },
          "previous": {
            "title": "Anzahl Sitze letzte Wahl",
            "type": "number"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "sources": {
      "title": "Quellen",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }    
            }
          }
        },
        "required": ["text"]
      }
    },
    "options": {
      "title": "Allgemeine Optionen",
      "type": "object",
      "Q:options": {
        "availabilityChecks": [
          {
            "type": "UserHasRole",
            "role": "expert-election-seats"
          }
        ]
      },
      "properties": {
        "hideUpdatedDate": {
          "title": "Aktualisierungsdatum ausblenden",
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "required": [
    "title", "totalSeats"
  ]
}
